<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Data_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="#275F70"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:gravity="center"
                    android:text="BOI DATA"
                    android:textSize="20dp"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name : "
                        android:textColor="@color/black"
                        android:textSize="18dp">

                    </TextView>

                    <EditText
                        android:id="@+id/name_adt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="name">

                    </EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Surname : "
                        android:textColor="@color/black"
                        android:textSize="18dp">

                    </TextView>

                    <EditText
                        android:id="@+id/surname_adt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="surname">

                    </EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Father Name : "
                        android:textColor="@color/black"
                        android:textSize="18dp">

                    </TextView>

                    <EditText
                        android:id="@+id/fname_adt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="father name">

                    </EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mother Name : "
                        android:textColor="@color/black"
                        android:textSize="18dp">

                    </TextView>

                    <EditText
                        android:id="@+id/mname_adt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="mother name">

                    </EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Age : "
                        android:textColor="@color/black"
                        android:textSize="18dp">

                    </TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/seek_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="16dp">

                        </TextView>

                        <SeekBar
                            android:id="@+id/seek"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </SeekBar>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile : "
                        android:textColor="@color/black"
                        android:textSize="18dp">

                    </TextView>

                    <EditText
                        android:id="@+id/mbl_adt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="mobile number"
                        android:inputType="number">

                    </EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E-Mail : "
                        android:textColor="@color/black"
                        android:textSize="18dp">

                    </TextView>

                    <EditText
                        android:id="@+id/mail_adt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="e-mail"
                        android:inputType="textEmailAddress">

                    </EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Gender : "
                        android:textColor="@color/black"
                        android:textSize="18dp">

                    </TextView>

                    <RadioGroup
                        android:id="@+id/rd_grp_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/male_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:buttonTint="#275F70"
                            android:text="Male"
                            android:textSize="16dp">

                        </RadioButton>

                        <RadioButton
                            android:id="@+id/female_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="#275F70"
                            android:text="Female"
                            android:textSize="16dp">

                        </RadioButton>

                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Birth Date : "
                        android:textColor="@color/black"
                        android:textSize="18dp">

                    </TextView>

                    <EditText
                        android:id="@+id/birth_adt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="birth date"
                        android:inputType="date">

                    </EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Hobby : "
                        android:textColor="@color/black"
                        android:textSize="18dp">

                    </TextView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/read_chk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="#275F70"
                            android:text="Reading"
                            android:textSize="16dp">

                        </CheckBox>

                        <CheckBox
                            android:id="@+id/dance_chk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="#275F70"
                            android:text="Dancing"
                            android:textSize="16dp">

                        </CheckBox>

                        <CheckBox
                            android:id="@+id/sing_chk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="#275F70"
                            android:text="Singing"
                            android:textSize="16dp">

                        </CheckBox>

                        <CheckBox
                            android:id="@+id/swim_chk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="#275F70"
                            android:text="Swimming"
                            android:textSize="16dp">

                        </CheckBox>

                        <CheckBox
                            android:id="@+id/travel_chk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="#275F70"
                            android:text="Travelling"
                            android:textSize="16dp">

                        </CheckBox>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Village : "
                        android:textColor="@color/black"
                        android:textSize="18dp">

                    </TextView>

                    <EditText
                        android:id="@+id/village_adt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="village">

                    </EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address : "
                        android:textColor="@color/black"
                        android:textSize="18dp">

                    </TextView>

                    <EditText
                        android:id="@+id/add_adt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="address">

                    </EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/reset_btn"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:backgroundTint="#275F70"
                        android:text="RESET">

                    </Button>

                    <Button
                        android:id="@+id/submit_btn"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:backgroundTint="#275F70"
                        android:layout_marginLeft="20dp"
                        android:text="SUBMIT">

                    </Button>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>