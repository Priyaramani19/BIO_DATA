                       android:textColor="@color/black">

                   </TextView>

                   <TextView
                       android:id="@+id/mbl_txt"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="123456789"
                       android:textColor="@color/black">

                   </TextView>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="30dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
