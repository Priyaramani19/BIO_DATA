                       android:textColor="@color/black">

                   </TextView>

                   <TextView
                       android:id="@+id/birth_txt"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="19-12-2022"
                       android:textColor="@color/black">

                   </TextView>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="30dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
