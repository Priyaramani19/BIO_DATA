                   </TextView>

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">

                       <TextView
                           android:id="@+id/hobbies1"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Ramani"
                           android:textColor="@color/black">

                       </TextView>

                       <TextView
                           android:id="@+id/hobbies2"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="5dp"
                           android:text="Ramani"
                           android:textColor="@color/black">

                       </TextView>

                       <TextView
                           android:id="@+id/hobbies3"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="5dp"
                           android:text="Ramani"
                           android:textColor="@color/black">

                       </TextView>

                       <TextView
                           android:id="@+id/hobbies4"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="5dp"
                           android:text="Ramani"
                           android:textColor="@color/black">

                       </TextView>

                       <TextView
                           android:id="@+id/hobbies5"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="5dp"
                           android:text="Ramani"
                           android:textColor="@color/black">

                       </TextView>


                   </LinearLayout>


               </LinearLayout>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="30dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="VILLAGE : "
                       android:textColor="@color/black">

                   </TextView>

                   <TextView
                       android:id="@+id/village_txt"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Amreli"
                       android:textColor="@color/black">

                   </TextView>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="30dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
